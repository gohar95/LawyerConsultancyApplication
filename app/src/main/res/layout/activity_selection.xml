<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SelectionActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="30dp"
            android:src="@drawable/logo_copy"
            android:layout_width="80dp"
            android:layout_marginLeft="-5dp"
            android:layout_height="70dp" />

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#161616"
            android:layout_marginTop="15dp"
            android:text="Welcome to Pak Legal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="17sp"
            android:textColor="#636363"
            android:layout_marginTop="5dp"
            android:text="Pak Legal is a platform to provide doorstep services to Lawyers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/signup"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Sign Up"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_style2"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Log in"
            android:textColor="#000000"
            android:textSize="18sp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/btn_style3"/>


    </LinearLayout>

</ScrollView>