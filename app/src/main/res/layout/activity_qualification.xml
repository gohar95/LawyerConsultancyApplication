<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paklegal_back"
    tools:context="paklegal2020.pl.paklegal.Qualification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:text="Add Your"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Qualification"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="30dp"
        app:cardElevation="7dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="15dp"
        android:background="@color/colorWhite"
        android:layout_marginHorizontal="25dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lawyer Edducation:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_receipt"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lawyer CNIC:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_receipt"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="number"
                    android:maxLength="13"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lawyer Licence No:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_licence"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_licence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="number"
                    android:maxLength="13"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrollment for Lower-Court:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_court"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_lcourt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrollment for Higher-Court:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_court"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_hcourt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voter for Lower-Court:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_voter"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_vlcourt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voter for Higher-Court:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_voter"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_vhcourt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chamber City:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_city"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_chambercity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consult Details:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <EditText
                    android:drawableLeft="@drawable/ic_speccial"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_speciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Speaking Languages:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <TextView
                    android:drawableLeft="@drawable/ic_language"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:text="Choose Language"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Categories:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>
                <TextView
                    android:drawableLeft="@drawable/ic_language"
                    android:drawablePadding="10dp"
                    android:textSize="16sp"
                    android:text="Choose Category"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/lawyer_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/addData"
                    android:layout_marginTop="15dp"
                    android:text="Update Data"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:background="@drawable/btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
